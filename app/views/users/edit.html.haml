%h2= t("users.edit.title")
- semantic_form_for @user do |form|
  = form.error_messages
  - form.inputs do
    = form.input :nickname
    = form.input :public_flag, :as => :radio, :label => t("users.edit.public_flag"), :hint => t("users.edit.public_flag_hint"), :collection => { t("users.edit.public_flag_yes") => true, t("users.edit.public_flag_no") => false}
    = form.input :language, :as => :select, :collection => AVAILABLE_LANGUAGES
  - form.inputs :name => t("users.edit.password_fieldset"), :id => "password_fields" do
    = form.input :password, :as => :password, :label => t("users.edit.password_label")            
    = form.input :password_confirmation, :as => :password, :label => t("users.edit.password_confirmation_label")
  - form.buttons do
    = form.commit_button t("users.edit.save_button")