- if signed_in?
  %span#greeting
    = t "layouts._header.hello"
    = link_to h(current_user.nick_or_email), user_url(current_user)
    \!
  %span#settings= link_to t("layouts._header.settings"), edit_user_url(current_user)
  \&bull;
  %span#logout
    = link_to t("layouts._header.sign_out"), sign_out_path
    ?
- else
  - if (show_visitor_links?) 
    %span= link_to t("layouts._header.sign_in"), sign_in_path()
    \&bull;
    %span= link_to t("layouts._header.sign_up"), sign_up_path()
    \&bull;
  %span
    [#{link_to "en", { :locale => "en"}, { :title => t("Set language to English") }}]
  %span
    [#{link_to "it", { :locale => "it"}, { :title => t("Set language to Italian")}}]