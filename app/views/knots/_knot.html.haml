%li{:class => "knot #{cycle("even", "odd")}", :id => "knot-#{knot.id}"}
    = link_to h(knot.human_title), read_knot_path(knot), { :class => "article", :title => h(knot.url) }
    = content_tag(:p, h(knot.summary)) unless knot.summary.blank?
    = render :partial => 'knots/actions', :locals => { :knot => knot } if actions
